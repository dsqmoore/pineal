(osc-value tri-line /tri/line)
(osc-value quad-line /quad/line)

;(osc-send 0.01 /quad/line)

(alias triangle
       (polygon 3
                :
                fill   (color 0 1 0 0)
                stroke (color 0 1 1)
                line   (tri-line 0.5)
                radius 0.5))

(alias square (polygon 4))

(alias g1
       (polygon 4
                :
                fill     (color 0 1 1 0)
                rotation (/ pi 4)
                position [0.1 0.05]
                radius   0.5)
       (polygon 3
                :
                radius 0.5
                line   0.05
                fill   (color 0 1 1 0.1)
                stroke (color 0 0 1))
       (triangle))

(alias g2
       (group
         (square)
         :
         depth  100
         scale  0.9
         translate 0.0
         line     0.1
         fill     (color 0 1 1 0.1)
         stroke (color 1 1 1)
         rotate (/ pi 6)))



(window master (g2))
