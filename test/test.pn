(osc-value tri-line /tri/line)
(osc-value quad-line /quad/line)

;(osc-send 0.01 /quad/line)

(alias triangle
       (polygon 3
                :
                fill   (color 0 1 0 0.5)
                stroke (color 0 1 1)
                line   (tri-line 0.5 0.01)
                radius 0.5))


(layer layer-1 (triangle))


(window master (draw layer-1))
